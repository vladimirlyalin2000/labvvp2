#include <iostream>
#include <math.h>
Using namespace std;
Int main()
{
	Float x1, x2, x3, y1, y2, y3, a, b, c, p, s;
	cout << "Enter first cord" << endl;
	cin >> x1 >> y1;
	cout << "Enter second cord" << endl;
	cin >> x2 >> y2;
	cout << "Enter third cord" << endl;
	cin >> x3 >> y3;
	a = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));
	b = sqrt(pow((x3 - x2), 2) + pow((y3 - y2), 2));
	c = sqrt(pow((x1 - x3), 2) + pow((y1 - y3), 2));
	p = (a + b + c)/2;
	s = sqrt(p * (p - a) * (p - b) * (p - c));
	cout << "P = " << p * 2 << endl << "S = " << s;
}
